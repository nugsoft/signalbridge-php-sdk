{
    "name": "nugsoft/signalbridge-php-sdk",
    "description": "PHP SDK for SignalBridge SMS Gateway - Send SMS messages through multiple vendors with unified API (Vanilla PHP, no framework required)",
    "keywords": [
        "php",
        "sms",
        "signalbridge",
        "nugsoft",
        "messaging",
        "notifications",
        "africa-talking",
        "speedamobile"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Asaba William",
            "email": "asabawilliam@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2|^8.3|^8.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Nugsoft\\SignalBridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nugsoft\\SignalBridge\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
